<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<p>
  <%= link_to "ストックしたTodo", likes_path%>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Text</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @todos.count == 0 %>
      <p>TODOが登録されていません</p>
    <% else %>
      <% @todos.each do |todo| %>
        <tr>
          <td><%= todo.text %></td>
          <td><%= todo.priority %></td>
          <td><%= link_to 'Show', todo %></td>
          <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
          <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>
