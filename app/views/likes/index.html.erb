<p id="notice"><%= notice %></p>

<h1>ストックしたTodoの一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>Text</th>
      <th>Priority</th>
    </tr>
  </thead>

  <tbody>
    <% if @todos.count == 0 %>
      <p>ストックはまだありません</p>
    <% else %>
      <% @todos.each do |todo| %>
        <tr>
          <td><%= todo.text %></td>
          <td><%= todo.priority %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '一覧に戻る', todos_path %>
